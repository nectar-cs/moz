<% if values[:quotas][:enabled] %>
apiVersion: v1
kind: ResourceQuota
metadata:
  name: resource-quota
  namespace: <%= release_name %>
spec:
  hard:
    requests.cpu: <%= values[:quotas][:requests][:cpu] %>
    requests.memory: <%= values[:quotas][:requests][:memory] %>
    limits.cpu: <%= values[:quotas][:limits][:cpu] %>
    limits.memory: <%= values[:quotas][:limits][:memory] %>

---

    <% end %>


apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: <%= release_name %>
  name: ice-cream
  labels:
    app: ice-cream
spec:
  replicas: <%= values[:deployment][:replicas] %>
  selector:
    matchLabels:
      app: ice-cream
  template:
    metadata:
      labels:
        app: ice-cream
    spec:
      containers:
        - name: main
          image: <%= values[:deployment][:image] %>
          imagePullPolicy: Always
            <% if values[:quotas][:enabled] %>
          resources:
            requests:
              memory: 25M
              cpu: 20m
            limits:
              memory: 50M
              cpu: 30m
            <% end %>
          env:
            - name: "FLAVOR"
              value: <%= values[:deployment][:flavor] %>

---

apiVersion: v1
kind: Service
metadata:
  namespace: <%= release_name %>
  name: ice-cream
  labels:
    app: ice-cream
spec:
  type: <%= values[:service][:type] %>
  ports:
    - name: main
      port: <%= values[:service][:port] %>
      targetPort: 8080
  selector:
    app: ice-cream