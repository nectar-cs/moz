<% root = values[:cert_manager] || {} %>

apiVersion: cert-manager.io/v1alpha2
kind: Issuer
metadata:
  name: <%= consts.issuer_name %>
  namespace: <%= release_name %>
  labels:
    app: <%= consts.app_name %>
spec:
  acme:
    server: <%= root[:server] %>
    email: <%= root[:email] %>
    privateKeySecretRef:
      name: "<%= consts.issuer_name %>"
    solvers:
    - http01:
        ingress:
          class: "<%= values.dig(:ingress, :class) %>"