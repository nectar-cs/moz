<% root = values[:storage] %>

kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: <%= Constants.pvc_name %>
  namespace: <%= release_name %>
  finalizers: []
  labels:
    app: <%= Constants.app_name %>
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: <%= root[:size] %>