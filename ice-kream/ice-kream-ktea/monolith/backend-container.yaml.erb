<% root = extras[:root] %>
<% full_command = "bundle exec #{extras[:command]}" %>
<% command_parts = full_command.split(" ") %>
<% svc_root = extras[:service_root] %>

name: <%= extras[:name] %>
image: <%= root[:image] %>
imagePullPolicy: <%= root[:image_pull_policy] %>
command:
  <%= embed_array(command_parts) %>
ports:
  - containerPort: <%= svc_root[:port] %>
resources:
    <%= embed(root[:resources]) %>
env: <%= embed_array(extras[:env_vars]) %>
