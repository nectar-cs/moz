<% img_base = 'us-central1-docker.pkg.dev/nectar-bazaar/public' %>
<% semver = ENV['ICE_KREAM_VER'] || '1.0.0' %>

env: production

secrets:
  standard:
    db_creds:
      db_password: "unsafe"

storage:
  size: 1Gi
  internal: true

monolith:
  deployment:
    image: "<%= img_base %>/ice-kream-app:<%= semver %>"
    ice_kream_ver: <%= semver %>
    image_pull_policy: Always
    admin_email: "admin@admin.com"
    replicas: 1
    resources:
      requests:
        cpu: 0.25
        memory: "250M"
      limits:
        memory: "500M"
        cpu: <%= semver[0] rescue '1' %>
  service:
    port: 3000
    type: ClusterIP

ingress:
  enabled: false
  class: nginx
  routes:
    monolith:
      host: ""
      path: "/"
