<% name = extras[:name] %>
<% root = extras[:root] || {} %>

apiVersion: cert-manager.io/v1alpha2
kind: Issuer
metadata:
  name: <%= name %>
  namespace: <%= release_name %>
spec:
  acme:
    server: <%= root[:server] %>
    email: <%= root[:email] %>
    privateKeySecretRef:
      name: "<%= name %>"
    solvers:
    - http01:
        ingress:
          class: "<%= root[:ingress_class] %>"